<Window x:Class="Contacts.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contact Details" Height="300" Width="300">
	<StackPanel Margin='10'>
		<TextBox x:Name='nameTextInput'  Margin='0,0,0,5'/>
		<TextBox x:Name='emailTextInput' Margin='0,0,0,5'/>
		<TextBox x:Name='phoneTextInput' Margin='0,0,0,5'/>
		<Button x:Name='updateButton' Content='Update' Margin='0, 5, 0, 0' Click='updateButton_Click'/>
		<Button x:Name='deleteButton' Background='Red' Margin='0, 5, 0, 0' Content='Delete' Click='deleteButton_Click'/>
	</StackPanel>
</Window>
