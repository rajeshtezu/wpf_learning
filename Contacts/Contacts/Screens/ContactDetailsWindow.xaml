<Window x:Class="Contacts.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contact Details" Height="300" Width="300">
	<StackPanel Margin='10'>
		<StackPanel Orientation='Horizontal'>
			<Label Content='Name' FontSize='14' />
			<TextBox x:Name='nameTextInput' Padding='5' Width='200' Margin='12,0,0,5'/>
		</StackPanel>

		<StackPanel Orientation='Horizontal'>
			<Label Content='Email' FontSize='14' />
			<TextBox x:Name='emailTextInput' Width='200' Margin='16,0,0,5'/>
		</StackPanel>

		<StackPanel Orientation='Horizontal'>
			<Label Content='Phone' FontSize='14' />
			<TextBox x:Name='phoneTextInput' Width='200' Margin='10,0,0,5'/>
		</StackPanel>
		
		<Button x:Name='updateButton' Content='Update' Margin='0, 5, 0, 0' FontSize='14' Click='updateButton_Click'/>
		<Button x:Name='deleteButton' Background='Red' Margin='0, 5, 0, 0' FontSize='14' Content='Delete' Click='deleteButton_Click'/>
	</StackPanel>
</Window>
